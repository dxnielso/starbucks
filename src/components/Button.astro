---
import { Button as ButtonInterface } from "../types/types";
interface Button {
  button: ButtonInterface;
  color: string;
  border: string;
}
const { button, border, color } = Astro.props;
---

<a
  class={`inline-block px-4 py-2 rounded-3xl border text-sm hover:opacity-80 duration-200 ${border} ${color}`}
  href={button.url}
  target="_blank"
>
  {button.text}
</a>
