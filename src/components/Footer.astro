---
import SocialMediaRow from './SocialMediaRow';
import Accordion from "./Accordion";

const links = [
  {
    title: "Sobre nosotros",
    links: [
      {
        text: "Trabaja con nosotros",
        link: "/"
      },
      {
        text: "Historias Starbucks",
        link: "/"
      },
    ]
  },
  {
    title: "Atención al cliente",
    links: [
      {
        text: "Contáctanos",
        link: "/"
      },
      {
        text: "Facturas Electrónicas",
        link: "/"
      },
      {
        text: "Formas de comprar",
        link: "/"
      },
    ]
  },
]
---

<footer class="w-full px-6">
  <!-- Accordion -->
  <ul class="w-full bg-white flex flex-col space-y-4 pt-8 pb-20">
    {
      links.map((link, e) => (
        <Accordion client:visible title={link.title} links={link.links} />
      ))
    }
  </ul>
  <span class="block w-full h-[1px] bg-gray-300"></span>
  <!-- Iconos -->
  <div class="w-full py-10 flex justify-center items-center">
    <SocialMediaRow client:visible />
  </div>
</footer>